@model BookStore.ViewModels.BookAutherViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>BookAutherViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookID" class="control-label"></label>
                <input asp-for="BookID" readonly class="form-control" />
                <span asp-validation-for="BookID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input type="file" asp-for="File" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
                <img src="~/uploads/@Model.imgUrl" style="width:128px;" class="img-thumbnail" />
            </div>
            <input type="hidden" asp-for="imgUrl" class="form-control" />
            <div class="form-group">
                <label asp-for="AutherID" class="control-label"></label>
                <select asp-for="AutherID" class="form-control"
                        asp-items="@(new SelectList(Model.Authers, "id", "FullName"))"></select>
                <span asp-validation-for="AutherID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info" />
                <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_Validation" />
}
